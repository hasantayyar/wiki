{% extends 'main' %}
{% block article %}

    {{ form_open({'route': 'category.create', 'method': 'post'}) }}

    <div class="row">
        <h2>New Category</h2>
        <div class="large-4 columns">
            {{ form_label('name', 'The Category\'s name') }}
            {{ form_text('name', session_has('name') ? session_get('name') : '') }}

        </div>
    </div>
    <div class="row">
        <div class="large-4 columns">
            {{ form_submit('Create', {'class': 'button small'}) }}
        </div>
    </div>
    {{ form_token() }}
    {{ form_close }}

{% endblock %}