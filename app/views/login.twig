{% extends 'main' %}

{% block topRightBar %}
<section class="top-bar-section">
    <!-- Right Nav Section -->
    <ul class="right">
        <li class="has-form">
            <div class="row collapse">
                <div class="large-8 small-9 columns">
                    <input type="text" placeholder="Find Stuff">
                </div>
                <div class="large-4 small-3 columns">
                    <a href="#" class="alert button expand">Search</a>
                </div>
            </div>
        </li>
        <li class="has-dropdown">
            <a href="#">User Name</a>
            <ul class="dropdown">
                <li><a href="#">Logout</a></li>
                <li><a href="#">Settings</a></li>
            </ul>
        </li>
    </ul>
</section>
{% endblock %}
{% block main %}
    <div class="row small-form">
        <div class="columns large-centered large-4">
            <div class="row">
                {% if session_has('login_error') %}
                    <div data-alert class="alert-box alert radius">
                        {{ session_get('login_error') }}
                        <a href="#" class="close">&times;</a>
                    </div>
                {% elseif session_has('logout_success') %}
                    <div data-alert class="alert-box success radius">
                        {{ session_get('logout_success') }}
                        <a href="#" class="close">&times;</a>
                    </div>
                {% endif %}
            </div>
            {{ form_open({'route': 'login_check'}) }}
            <div class="row">
                <h3>Login</h3>
                <div class="large-12">
                    {{ form_label('email', 'Your Email Address') }}
                    {{ form_email('email') }}
                </div>
            </div>
            <div class="row">
                <div class="large-12">
                    {{ form_label('password', 'Your Password') }}
                    {{ form_password('password') }}
                </div>
            </div>
            <div class="row">
                <div class="large-4 columns right">
                    {{ form_submit('Log In', {'class': 'button small'}) }}
                </div>
            </div>
            {{ form_token()|raw }}
            {{ form_close()|raw }}
        </div>
    </div>

{% endblock %}
{% block topBarRight %}{% endblock %}
